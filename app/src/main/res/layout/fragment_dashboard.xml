<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Dashboard"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
        <RelativeLayout
            android:id="@+id/tamplateinti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            >
            <RelativeLayout
                android:id="@+id/headeratas"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    app:cardCornerRadius="50dp"
                    >
                    <ImageView
                        android:id="@+id/imgpp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tes"
                        />
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/cardView"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/ucapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat Datang"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12dp"
                        />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/nama"
                        android:layout_below="@+id/ucapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Michael Jordan"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="14dp"
                        />

                </RelativeLayout>
            </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_below="@+id/headeratas"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ekskulpaskibra"
                        />
                </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/btn"
                android:layout_below="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/btneskul"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/biruTua"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_logoeskul"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/btneskul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eskul"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnabsen"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        android:layout_centerHorizontal="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/orangePlat"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_scan"
                                />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/btnabsen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absen"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_toStartOf="@+id/btn4"
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btngaleri"
                        android:layout_width="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/pink"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_galeri"
                                />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:textFontWeight="1"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/btngaleri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galeri"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnprestasi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        android:layout_centerHorizontal="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/kuning"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_piala"
                                />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/btnprestasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prestasi"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinssemibold"
                android:text="Galeri"
                android:layout_below="@+id/btn"
                android:id="@+id/txtgaleri"
                android:layout_marginTop="30dp"
