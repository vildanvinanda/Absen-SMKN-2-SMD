<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.TambahEkskul"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_marginHorizontal="20dp"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Ekstrakulikuler"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_centerHorizontal="true"

                    android:id="@+id/jdl_jadwal"
                    />
                <ImageView
                    android:id="@+id/btnback"
                    android:layout_centerVertical="true"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/ic_panahkiri"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/header"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_image"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/card"
                    android:id="@+id/txtnamalomba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Nama"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/addnama"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/txtnamalomba"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColorHint="#D4D4D4"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:hint="Masukan nama"
                    android:paddingHorizontal="20dp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/addnama"
                    android:id="@+id/txtket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Keterangan"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/addket"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/txtket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="500"
                    android:paddingVertical="12dp"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:textColorHint="#D4D4D4"
                    android:textSize="12dp"
                    android:hint="Masukan keterangan"
                    android:paddingHorizontal="20dp"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/addket"
                    android:id="@+id/txtnamaPembina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Nama Pembina"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/addpembina"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/txtnamaPembina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="500"
                    android:paddingVertical="12dp"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:textColorHint="#D4D4D4"
                    android:textSize="12dp"
                    android:hint="Masukan nama pembina"
                    android:paddingHorizontal="20dp"
                    />


                <TextView
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btnBuat"
                    android:layout_below="@id/addpembina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buat"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:background="@drawable/bgtombol"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="100dp"
                    android:paddingVertical="10dp"
                    />



            </RelativeLayout>







        </RelativeLayout>
    </ScrollView>


</RelativeLayout>