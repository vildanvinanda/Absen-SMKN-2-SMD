<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activity.ASuperUser.PermintaanBergabung"
android:background="@color/white"
    >

<RelativeLayout
    android:layout_marginHorizontal="20dp"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permintaan Bergabung"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold"
        android:layout_centerHorizontal="true"

        android:id="@+id/jdl_jadwal"
        />
    <ImageView
        android:id="@+id/btnback"
        android:layout_centerVertical="true"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/ic_panahkiri"/>
</RelativeLayout>

<EditText
    android:layout_marginHorizontal="20dp"
    android:id="@+id/kolomsearch"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_height="38dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bgedittext"
    android:drawableEnd="@drawable/ic_search"
    android:elevation="8dp"
    android:hint="Type something"
    android:textColorHint="#dfdfdf"
    android:paddingVertical="6dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:textColor="#000"
    android:textSize="14dp"
    android:translationY="0dp"
    android:translationZ="0dp"
    android:layout_below="@+id/header"
    android:singleLine="true"
    />
<View
    android:layout_marginHorizontal="20dp"
    android:id="@+id/lane"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/kolomsearch"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#DDD"/>

    <LinearLayout
        android:id="@+id/tamplatebtn"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lane"
        >
        <RelativeLayout
            android:id="@+id/tamplatetextkolom1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/kolom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kolom1"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:fontFamily="@font/poppinssemibold"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tamplatetextkolom2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/kolom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kolom2"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:fontFamily="@font/poppinssemibold"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_marginHorizontal="20dp"
        android:id="@+id/lane2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tamplatebtn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"/>

    <RelativeLayout
        android:id="@+id/tampatejml"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lane2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:id="@+id/txtjml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah pendaftar :"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/poppinssemibold"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/jml"
            android:layout_toEndOf="@+id/txtjml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/poppinssemibold"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tampatejml"
    android:layout_marginTop="10dp"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_list_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_permintaan"
        />
</ScrollView>
</RelativeLayout>